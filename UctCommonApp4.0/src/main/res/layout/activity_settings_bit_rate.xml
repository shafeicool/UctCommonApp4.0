<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ptyt.uct.activity.SettingsBitRateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y44"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_settings_bit_rate_current"
            android:textColor="@color/colorTextView_14"
            android:textSize="@dimen/y32"/>

        <TextView
            android:id="@+id/tv_current"
            android:layout_width="@dimen/x170"
            android:layout_height="@dimen/y70"
            android:layout_marginLeft="@dimen/x16"
            android:background="@drawable/shape_blue_line_white_background"
            android:gravity="center"
            android:textColor="@color/colorTextView_14"
            android:textSize="@dimen/y32"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginRight="@dimen/x32"
        android:layout_marginTop="@dimen/y44">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
