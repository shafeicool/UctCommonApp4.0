<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title_fullscreen"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y90"
    android:paddingLeft="@dimen/x30"
    android:background="@color/colorWhite"
    android:visibility="visible">


    <TextView
        android:id="@+id/tv_groupCallState_fullscreen"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y100"
        android:gravity="center_vertical"
        android:textColor="#dc545d"
        android:textSize="@dimen/y28"
        android:lines="1"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/iv_unfold_fullscreen"
        android:layout_toStartOf="@+id/iv_unfold_fullscreen"
       />

    <ImageView
        android:id="@+id/iv_unfold_fullscreen"
        android:layout_width="@dimen/x90"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/x30"
        android:src="@mipmap/ic_pull_down" />
</RelativeLayout>
