<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/x270"
        android:layout_height="@dimen/y100"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/x10"
            app:cardElevation="@dimen/x6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/check_all_tv"
                    android:layout_width="@dimen/x120"
                    android:layout_height="@dimen/y76"
                    android:gravity="center"
                    android:text="@string/string_call_record_select_all"
                    android:textColor="@color/colorTextView_07"
                    android:textSize="@dimen/y26"/>

                <include layout="@layout/view_line02_gray_1dp"/>

                <TextView
                    android:id="@+id/delete_tv"
                    android:layout_width="@dimen/x120"
                    android:layout_height="@dimen/y76"
                    android:gravity="center"
                    android:text="@string/string_call_record_delete"
                    android:textColor="@color/colorTextView_07"
                    android:textSize="@dimen/y26"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>