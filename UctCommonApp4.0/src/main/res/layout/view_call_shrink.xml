<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y168"
    android:background="@color/colorPrimary"
    android:id="@+id/view_call_shrink"
    android:visibility="invisible"
    >
    <View
        android:id="@+id/view_shadow_shrink"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y8"
        android:background="@drawable/shape_shadow_bg">
    </View>
    <ImageView
        android:id="@+id/iv_avatar_shrink"
        android:layout_width="@dimen/y90"
        android:layout_height="@dimen/y90"
        android:src="@mipmap/ic_group_people"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x32"
        />
    <TextView
        android:id="@+id/tv_groupName_shrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/x20"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_avatar_shrink"
        android:lines="1"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/iv_groupCall_shrink"
        />
    <ImageView
        android:id="@+id/iv_groupCall_shrink"
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/x160"
        android:layout_below="@+id/ll"
        android:layout_centerHorizontal="true"
        android:src="@drawable/selector_btn_call_group"
        android:layout_marginTop="@dimen/y12"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_groupCall_shrink"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x32"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/iv_soundWave_shrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/animation_list_wave"
            />
        <TextView
            android:id="@+id/tv_state_shrink"
            style="@style/tv2et_wrap_content_16sp"
            android:text=""
            android:textColor="@color/colorTextView_02"
            android:layout_gravity="center_vertical" />
    </FrameLayout>
</RelativeLayout>