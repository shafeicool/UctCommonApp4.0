<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_press_background"
    android:paddingTop="@dimen/y16"
    android:paddingBottom="@dimen/y16"
    >
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/x44"
        android:layout_height="@dimen/x44"
        android:src="@mipmap/ic_map_other_position"
        android:layout_centerVertical="true" />

    <com.ptyt.uct.widget.MarqueeTextView
        android:id="@+id/tv_userName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_toRightOf="@+id/iv_avatar"
        android:ellipsize="end"
        android:lines="1"
        android:text="昵称"
        android:textColor="@color/colorTextView_11"
        android:textSize="@dimen/y30" />
    <TextView
        android:id="@+id/tv_uploadTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/y28"
        android:textColor="@color/colorTextView_21"
        android:layout_alignParentRight="true"
        android:lines="1"
        android:text="2017"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/y8"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_below="@+id/tv_userName"
        android:layout_toRightOf="@+id/iv_avatar"/>
</RelativeLayout>