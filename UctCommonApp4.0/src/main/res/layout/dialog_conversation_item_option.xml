<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxWidth="@dimen/x200"
              android:maxHeight="@dimen/y80"
              android:background="@drawable/pop"
              android:orientation="horizontal"
    android:padding="@dimen/y20">
    <TextView
        android:id="@+id/stick_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_conversation_stick"
        android:textColor="@color/colorTextView_07"
        android:textSize="@dimen/y26"/>
    <TextView
        android:id="@+id/delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:text="@string/string_conversation_delete"
        android:textColor="@color/colorTextView_07"
        android:textSize="@dimen/y26"/>

</LinearLayout>
