<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentView">
    <com.amap.api.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl">
    </com.amap.api.maps.MapView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl">

        <TextView
            android:id="@+id/tv_center_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_guideline"
            android:textColor="@color/colorRedAlpha2"
            android:textSize="@dimen/y28"
            android:background="@drawable/shape_center_navi"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_above="@+id/iv_center_location"
            android:layout_marginBottom="5dp"
            android:drawableRight="@mipmap/ic_right"
            android:drawablePadding="2dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_center_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_map_my_position"
            android:layout_centerInParent="true"
            android:paddingBottom="@dimen/y40"/>
        <TextView
            android:id="@+id/tv_centerPointLocation"
            style="@style/tv2et_wrap_content_16sp"
            android:textColor="@color/colorTextView_10"
            android:layout_marginLeft="@dimen/x100"
            android:layout_marginTop="@dimen/y44"
            android:singleLine="true"
            android:ellipsize="start"
            />
        <ImageView
            android:id="@+id/iv_compass"
            android:layout_width="@dimen/x106"
            android:layout_height="@dimen/x106"
            android:src="@mipmap/ic_compass"
            android:layout_marginTop="@dimen/y20"
            android:visibility="visible"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_mapControlTool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/y52">
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/x124"
            android:layout_height="@dimen/x124"
            android:src="@drawable/selector_map_search"
            android:layout_marginBottom="@dimen/y82"
            android:clickable="true"/>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y20"
            app:cardElevation="@dimen/x6">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_zoomIn"
                    android:layout_width="@dimen/x82"
                    android:layout_height="@dimen/x82"
                    android:src="@drawable/selector_map_zoom_in"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/iv_zoomOut"
                    android:layout_width="@dimen/x82"
                    android:layout_height="@dimen/x82"
                    android:src="@drawable/selector_map_zoom_out"
                    android:clickable="true" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="@dimen/x124"
            android:layout_height="@dimen/x124"
            android:src="@drawable/selector_map_location"
            android:clickable="true"
            />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/x6"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y52"
        android:layout_marginRight="@dimen/x15">
        <RelativeLayout
            android:id="@+id/rl_nearby"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x86"
            android:background="@drawable/shape_round_corner_white"
            >
            <TextView
                android:id="@+id/tv_nearby"
                style="@style/view_wrap_content"
                android:text="@string/string_choose_group"
                android:textSize="@dimen/y32"
                android:textColor="@color/colorTextView_01"
                android:layout_marginLeft="@dimen/x30"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_groupPullDown"
                android:layout_width="@dimen/x19"
                android:layout_height="@dimen/x10"
                android:src="@mipmap/ic_pull_down"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x26"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <com.ptyt.uct.widget.MarqueeTextView
        android:id="@+id/tv_currentChooseGroup"
        android:layout_width="@dimen/x200"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextView_10"
        android:textSize="14sp"
        android:layout_above="@+id/cv"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:lines="1"
        android:gravity="center"
        android:ellipsize="end"
        android:layout_alignRight="@+id/cv"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_downloadOfflineMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="12dp"
        app:cardElevation="@dimen/x6"
        android:background="@drawable/suspend_bg"
        android:visibility="gone">
        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:src="@mipmap/ic_map_download"
            android:padding="@dimen/x10"
            />
    </android.support.v7.widget.CardView>
</RelativeLayout>