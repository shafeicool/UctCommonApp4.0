<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/shape_round_corner_stroke_blue">

    <ImageView
        android:id="@+id/iv_audio_dialog"
        android:layout_width="@dimen/y68"
        android:layout_height="@dimen/y72"
        android:padding="@dimen/y14"
        android:src="@drawable/selector_voice" />

    <ImageView
        android:id="@+id/iv_message_dialog"
        android:layout_width="@dimen/y68"
        android:layout_height="@dimen/y72"
        android:padding="@dimen/x14"
        android:src="@drawable/selector_message" />

    <ImageView
        android:id="@+id/iv_video_dialog"
        android:layout_width="@dimen/y68"
        android:layout_height="@dimen/y72"
        android:padding="@dimen/x14"
        android:src="@drawable/selector_video" />

    <ImageView
        android:id="@+id/iv_upload_dialog"
        android:layout_width="@dimen/y68"
        android:layout_height="@dimen/y72"
        android:padding="@dimen/x14"
        android:src="@drawable/selector_video_upload" />

    <ImageView
        android:id="@+id/iv_location_dialog"
        android:layout_width="@dimen/y68"
        android:layout_height="@dimen/y72"
        android:src="@drawable/selector_member_location"
        android:padding="@dimen/x14"
        android:visibility="gone"
        />
</LinearLayout>