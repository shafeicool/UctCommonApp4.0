<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/y12"
    android:paddingBottom="@dimen/y12"
    android:paddingLeft="@dimen/x26"
    android:paddingRight="@dimen/x26">
    <ImageView
        android:id="@+id/iv_itemType"
        android:layout_width="@dimen/y33"
        android:layout_height="@dimen/y33"
        android:src="@mipmap/ic_location"/>
    <TextView
        android:id="@+id/tv_itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/y32"
        android:textColor="@color/colorTextView_01"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x15"
        android:layout_toRightOf="@+id/iv_itemType"
        android:text="深圳"
        android:lines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/tv_itemAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/y26"
        android:textColor="@color/colorTextView_02"
        android:layout_marginLeft="@dimen/x15"
        android:layout_toRightOf="@+id/iv_itemType"
        android:layout_below="@+id/tv_itemName"
        android:layout_marginTop="@dimen/y12"
        android:text="深圳"
        android:lines="1"
        android:ellipsize="end"/>
</RelativeLayout>