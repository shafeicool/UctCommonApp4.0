<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_press_background">

    <ImageView
        android:id="@+id/iv_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x32"
        android:src="@mipmap/settings_chenkbox_normal"/>

    <TextView
        android:id="@+id/tv_resolution"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y100"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginRight="@dimen/x20"
        android:layout_toLeftOf="@id/iv_checked"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="sdfsdfshdfkashdjkfhjkashdfjkhsjkgkdhfjkghjkdfhgjkhdjkfghjh"
        android:textColor="@color/colorTextView_01"
        android:textSize="@dimen/y32"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_below="@id/tv_resolution"
        android:background="@color/colorline04"/>

</RelativeLayout>
