<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义对话框样式 透明 -->
    <style name="dialog_transparent" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
    </style>
    <!-- 自定义对话框样式 不透明 -->
    <style name="dialog_non_transparent" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
        <item name="android:background">@color/colorBackground10</item><!-- 背景色 -->
    </style>
</resources>